@model Plato


<div class="head">
    <h4><a href="/">Chefs </a>
        <p> | </p><a href="/platos">Platos </a>
        <p> | </p><a href="/New">Agregar un Chef </a>
        <p> | </p>Agregar un Plato
    </h4>
</div>
<h3>¡Agregar un PLATO!</h3>

<form asp-action="CrearPlato" asp-controller="Home" method="post">
    <div class='contenido'>
        <div class="row">
            <label asp-for="Nombre">Nombre: </label>
            <input asp-for="Nombre" required>
        </div>
        <div class="row">
            <label asp-for="ChefId">Nombre del Chef: </label>
            <select asp-for="ChefId" required>
                @foreach (var c in ViewBag.AllChefs)
                {
                    <option value="@c.ChefId">@c.Nombre @c.Apellido</option>
                }
            </select>
        </div>
        <div class="row">
            <label asp-for="Calorias">Calorias: </label>
            <input asp-for="Calorias" min="0" required>
        </div>
        <div class="row">
            <label asp-for="Sabor">Sabor: </label>
            <select asp-for="Sabor">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="row">
            <label asp-for="Descripcion">Descripción: </label>
            <textarea asp-for="Descripcion" required></textarea>
        </div>
        <div class="row">
            <input value="Agregar" class="btn btn-primary" type="submit">
        </div>
</form>
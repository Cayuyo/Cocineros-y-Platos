<table class="table table-striped table-bordered">
    <thead>
        <th>Nombre</th>
        <th>Edad</th>
        <th># de Platos</th>
    </thead>
    <tbody>
        @if (ViewBag.AllChefs != null)
        {
            @foreach (var c in ViewBag.AllChefs)
            {
                <tr>
                    <td>@c.Nombre @c.Apellido</td>
                    <td>@Chef.CalcularEdad(c.Cumpleanos)</td>
                    <td>@c.PlatosCreados.Count</td>
                </tr>
            }
        }
    </tbody>
</table>